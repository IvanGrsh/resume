{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{>title data='Work history' big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>
                        <br>
                        <div>{{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>
                        <br>

                        {{!-- <div>
                            {{#unless company.url}}
                            <b>{{company.name}}</b>
                            {{else}}
                            {{>link text=company.name href=company.url blank=true noLine=true}}
                            {{/unless}}
                        </div> --}}

                        <div>
                            {{#if company.url}}
                            {{>link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            {{company.name}}
                            {{/if}}
                        </div>
                        {{!-- <div><a href="{{company.url}}" target="'_blank">{{company.name}}</a></div> --}}
                        <br>
                        <br>
                        <div>
                            <strong>Projects ({{projectAmount}})</strong>
                        </div>
                        <br>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{>link text=name href=url blank=true noLine=true}}</div>
                                <br>
                                <div>
                                    <p>{{about}}</p>
                                </div>
                                <br>
                                <div>
                                    <div>
                                        <em>Project Stacks ({{stacksAmount}})</em>
                                    </div>
                                    <br>
                                    <ul>
                                        {{#each stacks}}
                                        <li>{{name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <br>
                                <div>
                                    <div>
                                        <em>Project Awards ({{awardsAmount}})</em>
                                    </div>
                                    <br>
                                    <ul>
                                        {{#each awards}}
                                        <li>{{name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>
                                {{!-- {{#each stacks}} --}}
                                {{!--
                                <br>

                                <div>{{duration.from}} -
                                    {{#if duration.to}}
                                    {{duration.to}}
                                    {{else}}
                                    (досі працюємо)
                                    {{/if}}
                                </div> --}}
                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

