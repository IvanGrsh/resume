<main class="pt-4">

    {{#with navigation}}
    <div class="card ">
        <div class="pt-2 pb-2">
            <div class="nav">
                {{#each links}}
                {{#if @last}}
                <a href="{{href}}" class="nav-link disabled">{{text}}</a>
                {{else}}
                <a href="{{href}}" class="nav-link">{{text}}</a>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}

    <div class="row pt-5">

        <div class="col-8">

            <h1 class="text-Dark">{{header}}</h1>
            <div class="py-4">
                {{#with contacts_data}}
            </div>

            <h3 class="text-Dark pb-2">{{title}}</h3>

            <div>
                {{#each buttons}}
                {{#if isPrimary}}
                <a href="#" class="btn btn-warning me-2">{{text}}</a>
                {{else}}
                {{#if isOutline}}
                <a href="#" class="btn btn-outline-warning">{{text}}
                    {{/if}}
                </a>
                {{/if}}
                {{/each}}
            </div>


            {{#with form}}
            <div class="row mt-4">
                {{#with input}}
                <div class="col-6 pb-4">
                    {{#with surname}}
                    <div class="ps-1">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control text-secondary" value="{{placeholder}}">
                        <div class="form-text text-secondary">{{caption}}</div>
                    </div>
                    {{/with}}
                </div>

                <div class="col-6 pb-4">
                    {{#with name}}
                    <div class="ps-1">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control text-secondary" value="{{placeholder}}">
                        <div class="form-text text-secondary">{{caption}}</div>
                    </div>
                    {{/with}}
                </div>

                <div class="col-6 pb-4">
                    {{#with phone}}
                    <div class="ps-1">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control text-secondary" value="{{placeholder}}">
                        <div class="form-text text-secondary">{{caption}}</div>
                    </div>
                    {{/with}}
                </div>

                <div class="col-6 pb-4">
                    {{#with email}}
                    <div class="ps-1">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control text-secondary" value="{{placeholder}}">
                        <div class="form-text text-secondary">{{caption}}</div>
                    </div>
                    {{/with}}
                </div>
                {{/with}}

                <div>
                    <hr>
                </div>


                {{#each switch}}
                <div class="row ps-4 pt-3 pb-3">
                    <div class="form-check form-switch">
                        <label class="form-check-label">{{text}}</label>
                        <input {{#if isActive}} checked {{/if}} name="form" type="checkbox" class="form-check-input">
                    </div>
                </div>
                {{/each}}

                {{/with}}
            </div>
            {{/with}}

            <div>
                <hr>
            </div>


            {{#with delivery}}
            <h3 class="text-Dark mt-4">{{title}}</h3>
            <div>
                <div class="card mt-3">
                    <div class="row gx-1">
                        {{#each select}}
                        <div class="col-6">
                            <div class="card-body">
                                <label class="form-label">{{label}}</label>
                                <select class="form-select form-select text-secondary">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="py-2">
                {{#each delivery_type}}
                <div class="form-check ms-1">
                    <label class="form-check-label">{{type}}</label>
                    <input name="food" type="radio" class="form-check-input">
                </div>
                {{/each}}
            </div>

            <div>
                <hr>
            </div>

            {{#with payment}}
            <h3 class="text-Dark mt-4">{{title}}</h3>
            <div>
                {{#each list}}
                <div class="form-check ms-1 mt-2">
                    <label class="form-check-label">{{type}}
                        <div class="form-text text-secondary"> {{description}}</div>
                    </label>
                    <input name="food" type="radio" class="form-check-input">
                </div>
                {{/each}}
            </div>
            {{/with}}

            <div>
                <hr>
            </div>


            <div class="row mt-4">
                {{#with contact}}
                <h3 class="text-Dark mt-4">{{title}}</h3>
                <div class="col-6 pb-4">
                    {{#with surname}}
                    <div class="ps-1">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control text-secondary" value="{{placeholder}}">
                        <div class="form-text text-secondary">{{caption}}</div>
                    </div>
                    {{/with}}
                </div>

                <div class="col-6 pb-4">
                    {{#with name}}
                    <div class="ps-1">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control text-secondary" value="{{placeholder}}">
                        <div class="form-text text-secondary">{{caption}}</div>
                    </div>
                    {{/with}}
                </div>

                <div class="col-6 pb-4">
                    {{#with phone}}
                    <div class="ps-1">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control text-secondary" value="{{placeholder}}">
                        <div class="form-text text-secondary">{{caption}}</div>
                    </div>
                    {{/with}}
                </div>

                <div class="col-6 pb-4">
                    {{#with email}}
                    <div class="ps-1">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control text-secondary" value="{{placeholder}}">
                        <div class="form-text text-secondary">{{caption}}</div>
                    </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>

            <div>
                <hr>
            </div>

            <div class="col-12 pb-4">
                {{#with coment}}
                <div class="ps-1">
                    <label class="form-label">{{label}}</label>
                    <input class="form-control text-secondary" value="{{placeholder}}">
                </div>
                {{/with}}
            </div>
            {{/with}}

            <div>
                <hr>
            </div>

            {{#with coupon}}
            <h3 class="text-Dark mt-4">{{title}}</h3>
            <div class="row mt-4">
                {{#with select}}
                <div class="col-12 pb-4 ">
                    {{#with availabel_coupon}}
                    <div class="card-body">
                        <label class="form-label">{{label}}</label>
                        <select class="form-select-lg form-select text-secondary">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/with}}

                    {{#with friend_coupon}}
                    <div class="card-body mt-3">
                        <label class="form-label">{{label}}</label>
                        <select class="form-select-sm form-select text-secondary">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/with}}
                </div>
                {{/with}}


                {{#with add}}
                <div class="col-12 pb-4">
                    {{#with friend}}
                    <div class="ps-1">
                        <label class="form-label ">{{label}}</label>
                        <input class="form-control form-select-lg text-secondary" value="{{placeholder}}">
                        <div class="form-text text-secondary"> {{caption}}</div>
                    </div>
                    {{/with}}

                    {{#with colleague}}
                    <div class="ps-1 mt-3">
                        <label class="form-label ">{{label}}</label>
                        <input class="form-control form-select-sm text-secondary" value="{{placeholder}}">
                        <div class="form-text text-secondary"> {{caption}}</div>
                    </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>
            {{/with}}

            <div>
                <hr>
            </div>

            <div class="row mt-4">
                {{#with quiz}}
                <h4 class="text-Dark mt-4">{{title}}</h4>
                <div class="col-12 pb-4">
                    {{#with preference}}
                    <div class="form-label">{{title}}</div>
                    <div class="mb-3">
                        {{#each options}}
                        <div class="col-12">
                            <div class="form-check">
                                <label class="form-check-label">{{this}}</label>
                                <input name="food" type="radio" class="form-check-input">
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}

                    {{#with your_expirience}}
                    <div class="mb-3">
                        <label class="form-label ">{{label}}</label>
                        <input class="form-control text-secondary">
                    </div>
                    {{/with}}

                    {{#with purchase_frequency}}
                    <div class="card-body mb-3">
                        <label class="form-label">{{label}}</label>
                        <select class="form-select form-select text-secondary">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/with}}

                    {{#with factors}}
                    <div class="form-label">{{title}}</div>
                    <div class="mb-3">
                        {{#each options}}
                        <div class="col-12">
                            <div class="form-check">
                                <label class="form-check-label">{{this}}</label>
                                <input name="food" type="checkbox" class="form-check-input">
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>

        </div>


        <div class="col-4">

            <div class="row mb-3">
                <div class="card p-1">
                    {{#each action_block}}
                    <a href="#"
                        class="{{#if isSuccess}} btn btn-success {{/if}} {{#if isDanger}} btn btn-danger {{/if}} {{#if isInfo}} btn btn-info {{/if}} m-1">
                        {{text}}
                    </a>
                    {{/each}}
                </div>
            </div>

            <div class="row">
                <div class="card">

                    {{#with total}}

                    <h3 class="mt-2">{{title}}</h3>

                    {{#each item_list}}
                    <div class="text-dark m-1">{{name}}: {{price}}</div>
                    {{/each}}

                    <div>
                        <hr>
                    </div>

                    {{#each additional_info}}
                    <div class="text-dark m-1">{{text}}: {{#if value}} {{value}} {{/if}}</div>
                    {{/each}}

                    <div>
                        <hr>
                    </div>

                    {{#with total_price}}
                    <div class="text-dark m-1">{{text}}: {{value}}</div>
                    {{/with}}

                    <div>
                        <hr>
                    </div>

                    {{#each button}}
                    <button
                        class="{{#if isPrimary}} btn btn-primary {{/if}} {{#if isOutline}} btn btn-outline-primary {{/if}} mb-2">
                        {{text}}</button>
                    {{/each}}

                    {{/with}}

                </div>
            </div>
        </div>
    </div>

    <div>
        <hr>
    </div>

    <div class="row">
        {{#each footer}}
        <div class="col-2">
            <div class="nav">
                <div>
                    {{#each this}}
                    {{#if @last}}
                    <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                    {{else}}
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</main>