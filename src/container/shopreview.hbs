<main class="pt-4">

    {{#with navigation}}
    <div class="card ">
        <div class="pt-2 pb-2">
            <div class="nav">
                {{#each links}}
                {{#if @last}}
                <a href="{{href}}" class="nav-link disabled">{{text}}</a>
                {{else}}
                <a href="{{href}}" class="nav-link">{{text}}</a>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}

    <div class="row pt-5">

        <div class="col-8">

            {{#with formBlock}}
            <h1 class="text-Dark">{{header}}</h1>
            <div class="py-4">
                {{#with rating}}
                <p>{{title}}:{{value}}</p>
                {{/with}}
            </div>

            {{#with actionBlock}}
            <div class="col-12 my-4">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        <a href="#" class="{{#if @last}}nav-link active {{else}} nav-link{{/if}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>

            <div>
                <hr class="mt-5 mb-5">
            </div>


            <div class="card">
                <div class="card-body">
                    {{#with report}}
                    <div class="card-title text-muted mb-3">{{title}}</div>
                    {{#with button}}
                    <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                    {{/with}}
                    {{/with}}
                </div>
            </div>
            {{/with}}

            <div>
                <hr class="mt-5 mb-5">
            </div>

            {{#with feedbackBlock}}
            <h3 class="text-Dark mb-5">{{title}}</h3>
            {{#each buttons}}
            <a href="{{link}}"
                class="{{#if isWarning}} btn btn-warning {{/if}} {{#if isSuccess}} btn btn-success{{/if}} {{#if isDanger}} btn btn-danger{{/if}} me-2">{{text}}</a>
            {{/each}}
            {{/with}}
            {{/with}}
        </div>

        <div class="col-4">

            {{#with formBlock}}
            {{#with goodsInfo}}
            <div class="card">
                <div class="card-body">
                    <div class="col-8">
                        <img class="card-img mb-3" src="{{photo}}" alt="{{alt}}">
                        <h5 class="card-title">{{name}}</h5>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <div class="col-10">
                        <h5 class="card-title">{{price}}</h5>
                        {{#if inMarket}} Є в наявності {{/if}}
                        <div class="mt-2">
                            {{#each buttons}}
                            <a href="{{link}}"
                                class="{{#if isPrimary}} btn btn-primary {{/if}} {{#if isSecondary}} btn btn-secondary{{/if}} mb-2">{{text}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <div class="col-12">
                        {{#with seller}}
                        <div>
                            {{title}}:
                            <b>{{value}}</b>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}
            {{/with}}
        </div>

        <div>
            <hr class="mt-5 mb-5">
        </div>

        {{#each reviewList}}
        {{!-- {{>reviewItem}} --}}
        <div class="card p-2 mt-5">
            <div class="card-body">
                <div class="col-12">
                    <div class="card">
                        {{#with title}}
                        <div class="mt-2 ms-2">
                            <h5>{{userName}}</h5>
                            <p>{{caption}}</p>
                            <data>{{date}}</data>
                        </div>
                        {{/with}}
                        <div>
                            <hr class="mt-2 mb-3">
                        </div>
                        {{#with reviewBody}}
                        {{#with seller}}
                        <div class="ms-2 mb-4">{{title}}: {{value}}</div>
                        {{/with}}
                        {{#with rating}}
                        <div class="ms-2 mb-4">{{title}}: {{value}}</div>
                        {{/with}}

                        {{#each text}}
                        <div class="ms-2 me-2 mb-4">{{this}}</div>
                        {{/each}}

                        {{#with advantages}}
                        <div class="ms-2 mb-4">
                            <b>{{title}}: </b>
                            <div>
                                {{text}}
                            </div>
                        </div>
                        {{/with}}

                        {{#with disadvantages}}
                        <div class="ms-2 mb-4">
                            <b>{{title}}: </b>
                            <div>
                                {{text}}
                            </div>
                        </div>
                        {{/with}}


                        <div class="row ms-1 mb-5">
                            {{#each images}}
                            <div class="col-2">
                                <img class="card-img " src="{{this}}" alt="{{alt}}">
                            </div>
                            {{/each}}
                        </div>

                        {{/with}}
                    </div>


                    {{#with reviewBody}}
                    {{#each coments}}
                    <div class="card mt-3">
                        <div class="row ms-2 mb-2 mt-3">
                            <h5>{{userName}}</h5>
                            <data>{{date}}</data>
                            <p class="mt-2">{{text}}</p>
                        </div>
                    </div>
                    {{/each}}
                    {{/with}}

                </div>
            </div>
        </div>
        {{/each}}

        <div class="mt-5"> </div>

        {{#with service}}
        <section class="col-12">
            <div class="row g-2">
                <div class="card text-bg-dark">
                    <h2 class="card-title text-center m-2">{{title}}</h2>
                    <p class="text-center m-2 mb-4">{{description}}</p>
                    {{#each buttons}}
                    <div class="pb-2 text-center">
                        <a href="{{link}}" class="btn btn-primary  m-2">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </section>
        {{/with}}

        <div>
            <hr class="mt-5 mb-5">
        </div>

        <div class="row">
            {{#each footer}}
            <div class="col-2">
                <div class="nav">
                    <div>
                        {{#each this}}
                        {{#if @last}}
                        <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                        {{else}}
                        <a href="{{link}}" class="nav-link">{{text}}</a>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</main>