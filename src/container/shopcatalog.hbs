<main class="pt-4">

    {{#with navigation}}
    <div class="card ">
        <div class="pt-2 pb-2">
            <div class="nav">
                {{#each links}}
                {{#if @last}}
                <a href="{{href}}" class="nav-link disabled">{{text}}</a>
                {{else}}
                <a href="{{href}}" class="nav-link">{{text}}</a>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}


    <div class="col-12 my-4">
        <div class="nav nav-tabs">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">

                    {{#each breadcrumb}}
                    {{#if this}}
                    <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
                    {{else}}
                    <li class="breadcrumb-item active" aria-current="page"><a href="{{url}}">{{name}}</a></li>
                    {{/if}}
                    {{/each}}
                </ol>
            </nav>
        </div>
    </div>

    <h1 class="card-title mt-5 mb-5">{{header}}</h1>

    <div class="row gx-1">
        {{#each sortBlock}}
        <div class="col-3">
            <div class="card-body">
                <select class="form-select form-select text-secondary">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        {{/each}}
    </div>


    <div class="row pt-5">

        <div class="col-4">
            {{#with filterBlock}}
            <div class="row mb-3">
                <div class="card p-1">
                    <div class="card-body">
                        {{#with sellers}}
                        <div class="form-label">{{title}}</div>
                        <div class="mb-3">
                            {{#each list}}
                            <div class="form-check">
                                <label class="form-check-label">{{value}}</label>
                                <input name="food" type="checkbox" class="form-check-input">
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}

                        <div>
                            <hr class="mt-4">
                        </div>

                        <div class="mb-3">

                            {{#with brands}}
                            <div class="ps-1">
                                <label class="form-label">{{title}}</label>
                                {{#with input}}
                                <input class="form-control text-secondary" value="{{placeholder}}">
                                {{/with}}
                            </div>

                            <div class="mt-2">
                                {{#each options}}
                                <div class="form-check">
                                    <label class="form-check-label">{{value}}</label>
                                    <input name="food" type="checkbox" class="form-check-input">
                                </div>
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>

                        <div>
                            <hr class="mt-4">
                        </div>

                        <div class="mb-3">
                            {{#with price}}
                            <div class="ps-1">
                                <label class="form-label">{{title}}</label>
                                {{#with range}}
                                <input class="form-control text-secondary mb-3" value="{{from}}">

                                <input class="form-control text-secondary mt-3" value="{{to}}">
                                {{/with}}
                            </div>


                            <div class="ms-1 mt-3">
                                {{#with button}}
                                <a href="{{link}}" class="btn btn-outline-secondary me-2">{{text}}</a>
                                {{/with}}
                            </div>
                            {{/with}}
                        </div>


                        {{#each filterList}}
                        <hr class="mt-4">
                        <div class="form-label">{{title}}</div>
                        {{#each options}}
                        <div class="form-check mt-2">
                            <label class="form-check-label">{{value}}</label>
                            <input name="food" type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                        {{/each}}

                    </div>
                </div>
            </div>
            {{/with}}
        </div>



        <div class="col-8">

            {{!-- {{>catalogItem}} --}}
            <div class="row g-4">
                {{#each goodsList}}
                <section class="col-6">
                    <div class="card text-dark">
                        <img class="card-img-top" src="{{img}}" alt="{{alt}}">

                        <div class="ms-2 mt-2">
                            {{#if isHot}}
                            <span class="badge text-bg-warning rounded-pill text-uppercase">Hot</span>
                            {{/if}}

                            {{#if isNew}}
                            <span class="badge text-bg-primary rounded-pill text-uppercase">New</span>
                            {{/if}}

                            {{#if isFast}}
                            <span class="badge text-bg-danger rounded-pill text-uppercase">Fast</span>
                            {{/if}}

                            {{#if isFree}}
                            <span class="badge text-bg-success rounded-pill text-uppercase">Free</span>
                            {{/if}}
                        </div>

                        <div class="mt-2 ms-2">
                            <h4 class="card-title">{{name}}</h4>
                            {{#with review}}
                            <p> {{amount}} {{text}} </p>
                            {{/with}}
                            <h4>{{price}}</h4>
                            <p>{{delivery}}</p>
                            {{#each buttons}}
                            <a href="{{link}}"
                                class="{{#if isPrimary}}btn btn-primary{{/if}} {{#if isSecondary}}btn btn-secondary{{/if}} mt-2 mb-2">{{text}}</a>
                            {{/each}}
                            {{#each characteristics}}
                            <div class="mt-2 mb-2 me-2 ms-2">
                                <li>{{title}}: {{value}}</li>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </section>
                {{/each}}
            </div>

        </div>

        {{#with service}}
        <section class="col-12 mt-5 mb-5">
            <div class="row g-2">
                <div class="card text-bg-success">
                    <h2 class="card-title text-center m-2">{{title}}</h2>
                    <p class="text-center m-2 mb-4">{{description}}</p>
                    {{#each buttons}}
                    <div class="pb-2 text-center">
                        <a href="{{link}}" class="btn btn-primary  m-2">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </section>
        {{/with}}

        <div>
            <hr>
        </div>

        <div class="row">
            {{#each footer}}
            <div class="col-2">
                <div class="nav">
                    <div>
                        {{#each this}}
                        {{#if @last}}
                        <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                        {{else}}
                        <a href="{{link}}" class="nav-link">{{text}}</a>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>




    </div>
</main>