    {{#with userInfo}}
    <h2 class="card-title mt-5">{{title}}</h2>
    <div class="card  mt-5">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    {{#with profileData}}
                    <h3 class="card-title">{{title}}</h3>

                    <div class="card mt-3">
                        <div class="card-body">
                            {{#with fullName}}
                            <div class="row">
                                <div class="col-4">
                                    {{#with surname}}
                                    <h6 class="text-muted">{{title}}</h6>
                                    <h6>{{value}}</h6>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    {{#with name}}
                                    <h6 class="text-muted">{{title}}</h6>
                                    <h6>{{value}}</h6>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    {{#with middleName}}
                                    <h6 class="text-muted">{{title}}</h6>
                                    <h6>{{value}}</h6>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-body">
                            {{#with otherInfo}}
                            <div class="row">
                                <div class="col-4">
                                    {{#with birthday}}
                                    <h6 class="text-muted">{{title}}</h6>
                                    <h6>{{value}}</h6>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    {{#with sex}}
                                    <h6 class="text-muted">{{title}}</h6>
                                    <h6>{{value}}</h6>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    {{#with language}}
                                    <h6 class="text-muted">{{title}}</h6>
                                    <h6>{{value}}</h6>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}

                    <div class="card mt-3">
                        <div class="card-body">

                            <div class="row">
                                <div class="col-12">
                                    {{#each buttons}}
                                    {{#with this}}
                                    <a href="{{link}}"
                                        class="{{#if isPrimary}}btn btn-primary{{/if}} {{#if isSecondary}}btn btn-outline-secondary{{/if}} {{#if isDanger}}btn btn-outline-danger{{/if}} me-2">{{text}}</a>
                                    {{/with}}
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="card  mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    {{#with recipients}}
                    <h3 class="card-title mt-2">{{title}}</h3>
                    <div class="row">
                        {{#each users}}
                        <div class="col-4">
                            <div class="card p-2">
                                <h6 class="text-dark">{{name}}</h6>
                                <h6 class="text-muted">{{phone}}</h6>
                                {{#with button}}
                                <a href="{{link}}" class="btn btn-primary me-2">{{text}}</a>
                                {{/with}}
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
    </div>

    <div class="card  mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    {{#with contacts}}
                    <h3 class="card-title mt-2">{{title}}</h3>
                    <div class="row">
                        {{#each contactData}}
                        <div class="col-4">
                            <div class="card p-2">
                                <h6 class="text-dark">{{title}}</h6>
                                <h6 class="text-muted">{{value}}</h6>
                                {{#with button}}
                                <a href="{{link}}"
                                    class="{{#if isPrimary}}btn btn-primary{{/if}} {{#if isSecondary}}btn btn-outline-secondary{{/if}} {{#if isDanger}}btn btn-outline-danger{{/if}} me-2">{{text}}</a>
                                {{/with}}
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
    {{/with}}

    <div>
        <hr class="mt-5">
    </div>

    <div class="row">
        {{#each footer}}
        <div class="col-2">
            <div class="nav">
                <div>
                    {{#each this}}
                    {{#if @last}}
                    <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                    {{else}}
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>

</main>