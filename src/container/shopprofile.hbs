<main class="p-1">
    {{#with navigation}}
    <div class="card">
        <div class="pt-2 pb-2">
            <div class="nav">
                {{#each links}}
                {{#if @last}}
                <a href="{{href}}" class="nav-link disabled">{{text}}</a>
                {{else}}
                <a href="{{href}}" class="nav-link">{{text}}</a>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}

    <h2 class="card-title mt-5">{{header}}</h2>

    {{#with purchase}}
    <div class="col-12 my-4">
        <div class="nav nav-tabs">
            {{#each tabs}}
            <div class="nav-item">
                <a href=" #" class="{{#if @first}}nav-link active {{else}} nav-link{{/if}}">{{this}}</a>
            </div>
            {{/each}}
        </div>
    </div>

    {{#with actionBlock}}
    <div class="row">
        <div class="col-4">
            <input class="form-control text-secondary " value="{{input.placeholder}}">
        </div>
        <div class="col-8">
            {{#each buttons}}
            <a href="{{link}}"
                class="{{#if isSuccess}}btn btn-success{{/if}} {{#if isOutline}}btn btn-outline-success{{/if}} {{#if isDanger}}btn btn-outline-danger{{/if}} me-2">{{text}}</a>
            {{/each}}
        </div>
    </div>
    {{/with}}

    <div>
        <hr class="mt-5 mb-3">
    </div>

    {{#each itemList}}
    {{>purchaseItem}}
