<div>
    {{#with main}}
    <main>
        <section>
            {{>title data="All skills" big=true}}
            <ul>
                {{#each skills}}
                <li>
                    {{name}}
                    {{#if point includeZero=true}} ({{point}}) {{/if}}
                    {{#if isTop}} (top) {{/if}}
                    {{#unless point includeZero=true}} (не вивчаємо) {{/unless}}

                    {{#unless point}}
                    {{#if point includeZero=true}}
                    (зараз вивчаємо)
                    {{/if}}
                    {{/unless}}

                    {{!-- {{name}} ({{point}})
                    {{#if isTop}} (top) {{/if}}
                    {{#unless point includeZero=true}} (не вивчаємо) {{/unless}}
                    {{#if point includeZero=true}} (ще вивчаємо) {{/if}} - тоже можно добавить как пример
                    кода --}}

                    {{!-- {{name}} ({{point}})
                    {{#if isTop}}
                    (top)
                    {{/if}}
                    {{#unless point}} (ще вивчаємо) {{/unless}} --}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{>title data='My Hobbies' big=false}}
            <ul>
                {{#each hobbies}}
                <li>
                    {{name}}
                    {{#if IsMain includeZero=true}} ({{isMain}}) {{/if}}
                    {{#if isMain}} (favourite) {{/if}}
                    {{!-- {{#unless IsMain includeZero=true}} (favourite) {{/unless}} --}}
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>

